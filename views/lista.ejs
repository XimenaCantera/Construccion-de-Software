    <% for (let premio of premios) { %>
      <% if (columns % 4 == 0) { %>
  </div>
      <div class="columns"></div>
        <% } %>
        <% columns++; %>
        <div class="column"></div>
        
<br><br>

      <div class="flex justify-center">
